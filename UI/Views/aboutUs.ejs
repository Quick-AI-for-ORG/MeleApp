<body>
    <!-- Hero Section -->
    <header class="hero-section">
        <div class="overlay"></div>
        <div class="container">
            <div class="hero-content">
                <h1>Our Story</h1>
                <p>Crafting Egypt's Finest Honey Since 1995</p>
            </div>
        </div>
    </header>

    <!-- About Section -->
    <section class="about-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h2>The Art of Beekeeping</h2>
                    <p>From the fertile Nile Valley to the lush Mediterranean coast, our dedicated beekeepers maintain
                        centuries-old traditions while embracing modern sustainable practices. Every jar of Mele honey
                        tells
                        a story of dedication, expertise, and Egypt's rich natural heritage.</p>
                </div>
                <div class="col-md-6">
                    <img src="/Images/beekeeping.jpg" alt="Beekeeping" class="img-fluid shadow-lg">
                </div>
            </div>
        </div>
    </section>

    <!-- Quality Section -->
    <section class="quality-section">
        <div class="container">
            <h2>Our Quality Standards</h2>
            <div class="quality-grid">
                <div class="quality-card">
                    <i class="fas fa-award"></i>
                    <h3>Pure & Natural</h3>
                    <div class="progress">
                        <div class="progress-bar" style="width: 98%">98%</div>
                    </div>
                </div>
                <div class="quality-card">
                    <i class="fas fa-leaf"></i>
                    <h3>Organic</h3>
                    <div class="progress">
                        <div class="progress-bar" style="width: 95%">95%</div>
                    </div>
                </div>
                <div class="quality-card">
                    <i class="fas fa-flask"></i>
                    <h3>Lab Tested</h3>
                    <div class="progress">
                        <div class="progress-bar" style="width: 100%">100%</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

