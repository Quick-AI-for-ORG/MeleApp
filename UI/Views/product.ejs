<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= product.title %> | Mele Honey
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/CSS/product.css">
</head>

<body class="background-radial-gradient">

        <div class="product-container">
            <div class="product-form">
                <div class="product-image-section">
                    <div class="slideshow-container">
                        <div class="main-image">
                            <%
                            console.log(product)
                            %>
                            <img id="mainImage" src="/Images/Products/<%= product.images[0] %>"
                                alt="<%= product.name %>">
                            <button class="slide-btn prev" onclick="changeSlide(-1)">❮</button>
                            <button class="slide-btn next" onclick="changeSlide(1)">❯</button>
                        </div>
                        <div class="thumbnail-container">
                            <% product.images.forEach((image, index)=> { %>
                                <div class="thumbnail <%= index === 0 ? 'active' : '' %>"
                                    onclick="changeImage('<%= image %>', this)">
                                    <img src="/Images/Products/<%= image %>" alt="<%= product.name %>">
                                </div>
                                <% }); %>
                        </div>
                    </div>
                </div>

                <div class="product-details-section">
                    <h1 class="title">
                        <%= product.name %>
                    </h1>
                    <div class="price-tag">
                        <i class="fas fa-tag"></i>
                        <span><small>EGP</small> <%= parseFloat(product.price).toFixed(2) %></span>
                    </div>

                    <p class="description"><i class="fas fa-info-circle"></i>
                        <%= product.description %>
                    </p>

                    <a href="/keeper/upgrade" class="add-to-cart-btn">
                        <i class="fas fa-shopping-cart"></i> Join Mele Keepers
                    </a>
                </div>
            </div>
        </div>
    </div>
    <script src="/JS/product.js"></script>
</body>

</html>