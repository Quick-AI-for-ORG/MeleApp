<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Live Stream</title>
    <script src="/socket.io/socket.io.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .stream-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            padding-top: 100px;
        }

        .stream-video-container {
            margin-top: 20px;
        }

        .stream-img {
            width: 100%;
            border: 1px solid #ccc;
            border-radius: 8px;
        }

        .stream-controls {
            margin-top: 20px;
            display: flex;
            gap: 10px;
        }

        .stream-button {
            padding: 10px 20px;
            background: #16404d;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .stream-button:hover {
            background: #fca311;
        }

        .stream-status {
            margin-top: 10px;
            padding: 10px;
            border-radius: 4px;
        }

        .stream-success {
            background: #d4edda;
            color: #155724;
        }

        .stream-error {
            background: #f8d7da;
            color: #721c24;
        }

        .stream-back-btn {
            position: fixed;
            top: 20px;
            left: 20px;
            padding: 10px 20px;
            background: #16404d;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
            z-index: 1000;
        }

        .stream-back-btn:hover {
            background: #fca311;
        }
    </style>
</head>

<body>
    <a href="http://<%= IP %>:3000/keeper/dashboard?user=<%= user %>" class="stream-back-btn">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
    <div class="stream-container">
        <h1>Screen Streaming</h1>
        <div class="stream-video-container">
            <img id="stream" class="stream-img" src="" width="640" height="480">
        </div>
        <div id="status" class="stream-status"></div>
    </div>

    <script>
        const socket = io();
        const img = document.getElementById("stream");
        let lastFrameTime = 0;

        socket.on("image", (data) => {
            const now = performance.now();

            if (now - lastFrameTime > 33) {
                requestAnimationFrame(() => {
                    img.src = "data:image/jpeg;base64," + data;
                });
                lastFrameTime = now;
            }
        });
    </script>
</body>

</html>