<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/CSS/admin.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
</head>

<body>
    <div class="container">
        <!-- Header -->
        <header class="header">
            <div class="header-left">
                <div class="logo">
                    <a class="navbar-brand" href="/">
                        <img id="logo" src="/IMAGES/Logo.png" alt="Mele Logo" draggable="false" height="50" />
                    </a>
                </div>
                <div class="nav-divider"></div>
                <div class="dynamic-title">
                    <h2 class="nav-title">Admin Dashboard</h2>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Stats Grid -->
            <div class="stats-grid">
                <div class="stat-card hives">
                    <div class="stat-header">
                        <div class="stat-icon">
                            <i class="fas fa-archive"></i>
                        </div>
                        <h3>Total Hives</h3>
                    </div>
                    <div class="stat-content">
                        <p class="stat-value">
                            <%= stats.hives %>
                        </p>
                        <p class="stat-label">Active Hives</p>
                    </div>
                </div>

                <div class="stat-card apiaries">
                    <div class="stat-header">
                        <div class="stat-icon">
                            <i class="fas fa-warehouse"></i>
                        </div>
                        <h3>Total Apiaries</h3>
                    </div>
                    <div class="stat-content">
                        <p class="stat-value">
                            <%= stats.apiaries %>
                        </p>
                        <p class="stat-label">Registered Apiaries</p>
                    </div>
                </div>

                <div class="stat-card users">
                    <div class="stat-header">
                        <div class="stat-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <h3>Total Users</h3>
                    </div>
                    <div class="stat-content">
                        <p class="stat-value">
                            <%= stats.users %>
                        </p>
                        <p class="stat-label">Registered Users</p>
                    </div>
                </div>

                <div class="stat-card sensors">
                    <div class="stat-header">
                        <div class="stat-icon">
                            <i class="fas fa-microchip"></i>
                        </div>
                        <h3>Active Sensors</h3>
                    </div>
                    <div class="stat-content">
                        <p class="stat-value">
                            <%= stats.sensors %>
                        </p>
                        <p class="stat-label">Deployed Sensors</p>
                    </div>
                </div>

                <div class="stat-card products">
                    <div class="stat-header">
                        <div class="stat-icon">
                            <i class="fas fa-box"></i>
                        </div>
                        <h3>Total Products</h3>
                    </div>
                    <div class="stat-content">
                        <p class="stat-value">
                            <%= stats.products %>
                        </p>
                        <p class="stat-label">Available Products</p>
                    </div>
                </div>
            </div>

            <!-- Recent Activity Section -->
            <div class="activity-section">
                <!-- Recent Users -->
                <div class="activity-card users-list">
                    <div class="card-header">
                        <h3><i class="fas fa-user-plus"></i> Recent Users</h3>
                        <button class="view-all">View All</button>
                    </div>
                    <div class="card-content">
                        <% recentUsers.forEach(user=> { %>
                            <div class="activity-item" data-user-id="<%= user._id %>">
                                <div class="user-avatar">
                                    <i class="fas fa-user-circle"></i>
                                </div>
                                <div class="activity-info">
                                    <h4>
                                        <%= user.firstName %>
                                            <%= user.lastName %>
                                    </h4>
                                    <p>
                                        <%= user.email %>
                                    </p>
                                    <span class="timestamp">
                                        Joined <%= new Date(user.createdAt).toLocaleDateString() %>
                                    </span>
                                </div>
                                <div class="activity-actions">
                                    <button class="action-btn edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="action-btn delete"
                                        onclick="showConfirmModal('user', '<%= user._id %>', '<%= user.firstName %> <%= user.lastName %>')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                </div>

                <!-- Recent Products -->
                <div class="activity-card products-list">
                    <div class="card-header">
                        <h3><i class="fas fa-box"></i> Recent Products</h3>
                        <button class="view-all">View All</button>
                    </div>
                    <div class="card-content">
                        <% recentProducts.forEach(product=> { %>
                            <div class="activity-item" data-product-id="<%= product._id %>">
                                <div class="product-icon">
                                    <i class="fas fa-box"></i>
                                </div>
                                <div class="activity-info">
                                    <h4>
                                        <%= product.name %>
                                    </h4>
                                    <p>$<%= product.price %>
                                    </p>
                                    <span class="timestamp">
                                        Added <%= new Date(product.createdAt).toLocaleDateString() %>
                                    </span>
                                </div>
                                <div class="activity-actions">
                                    <button class="action-btn edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="action-btn delete"
                                        onclick="showConfirmModal('product', '<%= product._id %>', '<%= product.name %>')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Update the Confirmation Modal -->
    <div id="confirmationModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Confirm Deletion</h3>
                <button class="close">&times;</button>
            </div>
            <div class="modal-body">
                <p id="confirmMessage"></p>
            </div>
            <div class="modal-footer">
                <button class="cancel-btn" onclick="hideConfirmModal()">Cancel</button>
                <button class="delete-btn" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>

    <script src="/JS/admin.js"></script>
    <style>
        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 10px 20px;
            border-radius: 5px;
            color: white;
            z-index: 1000;
            animation: slideIn 0.3s ease;
        }

        .notification.success {
            background-color: #10b981;
        }

        .notification.error {
            background-color: #ef4444;
        }

        @keyframes slideIn {
            from {
                transform: translateX(100%);
                opacity: 0;
            }

            to {
                transform: translateX(0);
                opacity: 1;
            }
        }
    </style>
</body>

</html>